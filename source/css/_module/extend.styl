// ------------------------------
// 右下角工具栏
// ------------------------------

.extend-tools
    position fixed
    bottom 30px
    right 270px
    li
        padding 15px
        cursor pointer
        transition()
        font-size 20px
        border()
        position relative
        &:hover
            background-color $theme_color
            border(all, 1px dotted $theme_color)
            color #fff
        &.tools-closeLight
            border(bottom,none)

.light-area
    position absolute
    left 0px
    top 0px
    width 100%
    height 100%
    background-color #171717
    display none
