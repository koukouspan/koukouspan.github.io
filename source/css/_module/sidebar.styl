// ------------------------------
// 左边栏
// ------------------------------

.sidebar
    width 300px
    font-size 14px
    background-color #000
    text-align right
    .sidebar-wrap
        padding 50px
        &>div
            margin-bottom 40px
    .widget-title
        padding-bottom 20px
        font-size 20px
        color $theme_color
        font-weight normal
    .widget-me
        padding 43px 50px
        word-break break-all
        box-sizing border-box
        border-bottom 1px solid #151515
        display flex
        .me-name
            flex 1
            margin-right 20px
            a
                color #fff
                font-size 28px
            small
                display block
                color #999
                font-size 14px
        .me-avatar
            width 60px
            img
                width 100%
                border-radius 50%
                transition()
                &:hover
                    transform rotate(360deg)
    .widget-account
        font-size 24px
        ul
            li
                display inline-block
                text-align right
                margin-left 20px
        a
            color #fff
            i
                transition()
                &:hover
                    transform rotate(360deg)
    .widget-nav
        .nav-list
            li
                a
                    color #818181
                    display block
                    font-size 18px
                    padding 10px 0px;
                    border-bottom 1px solid #151515
                    transition()
                    &:hover
                    &.active
                        color #fff
    .widget-tags
    .widget-categories
        a
            color #818181
            transition(color)
            &:hover
                color $theme_color
    .widget-late
        a
            display block
            padding 10px 0px
            border-bottom 1px dotted $border_color
            color #818181
            transition(color)
            &:hover
                color $theme_color
    .widget-categories
        li
            padding 5px 0px
            word-break break-all
        .category-list-count
            &::before
                content "（"
            &::after
                content "）"
    input::-webkit-search-cancel-button
        display none
    input[type=search]::-ms-clear
        display none
    .widget-search
        input[type="search"]
            width 100%
            height 30px
            text-align right
            font-size: $text_size
            color #fff
            padding 20px 20px
            background none
            border none
            outline none
            -webkit-appearance none
            border(all, 1px solid #818181)
            transition()
            &:hover
                border-color $theme_color
    ::-moz-placeholder
        color: #818181
