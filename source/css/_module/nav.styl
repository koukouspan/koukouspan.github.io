.nav
    width 100%
    height 40px
    background-color rgba(0,0,0,0.1)
    line-height 40px
    li
        float left
        a
            display block
            padding 0px 20px
            color #9e9e9e
            font-size 18px
            position relative
            transition()
            &:hover
            &.active
                @extend .nav_active