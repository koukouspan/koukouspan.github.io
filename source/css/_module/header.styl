// 头部样式文件
// ------------------------------

.header
    padding 30px 50px
    box-shadow 0px 0px 10px #101010
    .header-name
        font-size: 26px
        text-align left;
        float left
        &:first-letter
            color $theme_color
        small
            display block
            color #828282
            font-size 14px
            font-weight normal
        a
            color #dedede
    &::after
        content ""
        display block
        clear both