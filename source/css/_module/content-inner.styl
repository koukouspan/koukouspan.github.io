// ------------------------------
// 文章内页
// ------------------------------

.article-inner
    margin-bottom 0px !important
    .article-head
        padding 50px 150px
        @extend .background
        color #333
        position relative
        overflow hidden
        .head-letter
            position absolute
            font-size 170px
            width 124px
            color rgba(0,0,0,0.1)
            line-height 100%
            left 50%
            bottom -50px
            margin-left -72px
        .article-title
            font-size $column_text_size
            color #fff
    .inner-con
        overflow hidden
        .article-wrap
            margin $wrap_margin
        .tags-list
            margin-top 40px
            a
                font-size $text_size
                font-style italic

.article-navgition
    margin-top 40px
    border(top)
    .navgition-prev
        text-align left
    .navgition-next
        text-align right
    .navgition-wrap
        display flex
        > div
            flex 1
            padding 20px 40px
            float left
            transition(background-color)
            &:hover
                background-color $theme_color
                a
                    color #fff
        &:after
            content ""
            display block
            clear both
    .navgition-title
        font-size $text_size
        font-weight normal
        color $text_color
        a
            color $text_color

.article-description
.article-inner-con
    font-size $text_size
    line-height 160%
    color $text_color
    letter-spacing 0.5px
    p
        margin 10px 0px
    h1, h2, h3, h4, h5,h6
        margin 40px 0px
        padding-bottom 20px
        border(bottom)
    h1
        font-size 2em
    h2
        font-size 1.5em
    h3
        font-size 1.2em
    blockquote
        border(left, 1px solid $theme_color)
        background-color rgba(0,0,0,0.1)
        font-size 14px
        padding 10px 20px
        margin 20px 0px
        overflow auto
    a
        color $text_color
        text-decoration underline
    ul
    ol
        padding-left 20px
    li
        list-style square
    .highlight
    code
        border()
        font-size 0.8em
        background-color rgba(0,0,0,0.1)
        padding 5px 10px
        overflow auto
    .highlight
        margin 20px 0px
        .gutter
            color #ccc
            padding-right 10px
        table
            width auto
            text-indent 0px
            td
            th
                border(all, none)
    code
        margin 10px
    hr
        border 0
        background-color #272727
        height 1px
    img
        display block
        max-width 100%
        margin auto
    table
        width 100%
        border-collapse collapse
        text-indent 20px
        td
        th
            padding 5px 0px
            border()
        th
            background rgba(0,0,0,0.1)
            color #fff
            text-align left
            text-indent 20px

.article-dirname
    position absolute
    width 250px
    height 100%
    background $bar_color
    overflow auto
    top 0
    right 0
    .dirname-list
        a
            display block
            padding 20px 50px
            font-size $text_size
            color #606060
            overflow : hidden;
            text-overflow : ellipsis;
            white-space : nowrap;
            border(bottom, 1px solid #1d1d1d)
            &.active
                font-weight bold
                color $text_color
    .dirname-title
        font-size 20px
        padding 40px 50px
        border(bottom, 1px solid #1d1d1d)
    .dirname-list-level-1
        > a
            font-weight bold
            font-size 18px
    .dirname-list-child
        text-indent 20px

