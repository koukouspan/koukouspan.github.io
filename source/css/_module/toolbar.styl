// ------------------------------
// 右边栏
// ------------------------------

.toolbar
    position absolute
    top 0
    right 0
    width 250px
    height 100%
    background $bar_color
    overflow auto
    color #606060
   
    .widget-title
        padding-bottom 20px
        font-size 20px
        color #c2c2c2
    .widget-tags
    .widget-categories
        a
            color #606060
            transition(color)
            &:hover
                color #667800
    .widget-tags
        padding 40px 30px
        border(bottom, 1px solid #1d1d1d)
    .widget-categories
        padding 40px 30px
        border(bottom, 1px solid #1d1d1d)
        li
            padding 5px 0px
        .category-list-count
            &::before
                content "（"
            &::after
                content "）"
    input::-webkit-search-cancel-button
        display none
    input[type=search]::-ms-clear
        display none
    .widget-search
        padding 40px 30px
        border(bottom, 1px solid #1d1d1d)
        input[type="search"]
            width 100%
            height 30px
            font-size: $text_size
            color $text_color
            padding 20px 20px
            background none
            border none
            outline none
            -webkit-appearance none
            border()
            transition()
            &:hover
                border-color #667800
    ::-moz-placeholder
        color: $text_color

