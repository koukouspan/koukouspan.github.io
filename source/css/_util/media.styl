// ------------------------------
// 多端响应适配
// ------------------------------

@media screen and (max-width:960px)
    .body-box
        width 100%
    .sidebar
        width 250px
        position absolute
        top 0
        left 0
        height 100%
        overflow hidden
        .widget-account
        .widget-search
        .widget-late
        .widget-tags
        .widget-categories
            display none
    .content-article
        position absolute
        top 0
        left 0px
        width 100%
        .banner
            .mobile-toggle
                display block !important
                margin 20px
                color #fff
                font-size 24px


