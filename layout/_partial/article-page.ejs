<article class="article article-inner cl">
    <% var letter = item.title.substr(0, 1); %>
    <div class="column-head" id="fallEle" style="background-image: url(<%- theme.banner %>)">
        <h2 class="column-title">
            <i class="fa fa-paper-plane-o"></i>
            <%= item.title %>
        </h2>
    </div>
    <div class="article-block">
        <div class="inner-con">
            <div class="article-wrap cl">
                <div class="article-inner-con">
                    <%- item.content %>
                </div>
                <%- partial('_partial/comment') %>
            </div>
        </div>
    </div>
</article>
